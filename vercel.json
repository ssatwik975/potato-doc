{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "api/chat.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { "src": "/api/chat", "dest": "api/chat.py" },
    { "src": "/(.*)", "dest": "frontend/build/$1" }
  ]
}
